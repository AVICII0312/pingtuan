.title {
    padding-top: 10px;
    font-family: '微软雅黑 Bold', '微软雅黑 Regular', '微软雅黑';
    font-weight: 700;
    font-style: normal;
    font-size: 16px;
    text-align: center;
}

.member {
    width: 280px;
    height: 70px;
    overflow: hidden;
    padding-top: 15px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.more{
    height: 100%;
}

.member .message {
    padding-right: 10px;
    text-align: center;
    position: relative;
}

.member .message .img {
    width: 50px;
    height: 50px;
    text-align: center;
    line-height: 50px;
    background: #F2F2F2;
    border: 1px solid #D7D7D7;
    border-radius: 50%;
    font-family: "微软雅黑 Bold", "微软雅黑 Regular", 微软雅黑;
    font-weight: 700;
    font-style: normal;
    font-size: 16px;
    color: #cccccc;
}

.member .message .medal {
    width: 38px;
    height: 17px;
    line-height: 17px;
    font-size: 12px;
    color: #fff;
    background: red;
    border-radius: 12px;
    position: absolute;
    bottom: 16px;
    left: 5px;
}

.member .message .info {
    font-size: 12px;
    width: 5em;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}

.seeAll {
    display: inline-block;
    padding-top: 15px;
    font-family: 微软雅黑;
    font-weight: 400;
    font-style: normal;
    font-size: 12px;
    color: #b4b4b4;
    text-align: center;
}

.seeAll image {
    width: 14px;
    height: 8px;
}