.wx-popup{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.popup-container{
    width: 260px;
    height: 280px;
    background: #FF6600;
    border-radius: 10px;
    padding: 20px 10px 10px 10px ;
}
.wx-popup-title{
    text-align: center;
    font-family: '微软雅黑 Bold', '微软雅黑 Regular', '微软雅黑';
    font-weight: 700;
    font-style: normal;
    font-size: 30px;
    color: #FF3300;
    background: #FF9966;
    padding: 40px;
}
.wx-popup-content{
    font-family: '微软雅黑';
    font-weight: 400;
    font-style: normal;
    color: #FFFFFF;
    text-align: center;
    padding-top: 40px;
}
.ask{
    margin: 10px 30px;
    padding: 10px;
    width: 178px;
    font-family: '微软雅黑 Bold', '微软雅黑 Regular', '微软雅黑';
    font-size: 16px;
    color: #FFFFFF;
    background-image: linear-gradient(to bottom, #ff9600, #ff8300, #ff6e00, #ff5600, #ff3600);
    border-radius: 32px;
    border: 1px solid #FFCB00;
    box-shadow: 0px 0px 6px 0px rgba(0,0,0,0.4);
}
.wx-popup-button{
    position: relative;
    top: 30px;
}