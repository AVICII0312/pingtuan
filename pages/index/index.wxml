<!-- index.wxml -->
<view class="container">
  <header></header>
  <view class="spellStampstop">
    <spellStamps wx:for="{{list}}" listA='{{item}}'></spellStamps>
    <view class="building">
      <view class="buildingList">
        <view class="buildingImg"></view>
        <view class="stampsInfo">
          <span>
            <span>20人团</span>
            这里显示优惠券的名称（最多可显示两排）
          </span>
          <view class="price">
            ￥
            <p class="sum">1000</p>
            <p class="term">无门槛</p>
          </view>
        </view>
        <view class="progress">
          <view class="done">已完成20%</view>
          <navigator class="button-done" url="../cluster/cluster" bindtap="onOpenCluster">立即开团</navigator>
        </view>
      </view>
    </view>
  </view>
</view>