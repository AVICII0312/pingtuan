.card {
  margin: 10px;
  background: #fff;
  padding: 10px;
  border-radius: 8px;
}

.card .legend {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.card .legend .img {
  width: 52px;
  height: 52px;
  background: #F2F2F2;
}

.card .legend .text {
  font-size: 14px;
  color: #333;
}

.card .legend .striping {
  width: 40px;
  padding-bottom: 10px;
  border-top: 1px solid  #ccc;
}

.card .explain {
  padding: 10px 0;
  font-size: 12px;
  color: #666;
}

.rule {
  margin: 10px;
  font-size: 14px;
  color: #666;
}
