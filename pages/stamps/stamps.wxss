.header {
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  background: #fff;
  line-height: 40px;
  font-size: 12px;
  font-weight: 400;
  justify-content: space-around;
  align-items: baseline;
}

.header .active {
  border-bottom: 1px solid #ff9900;
  font-size: 16px;
  width: 94px;
  flex-shrink: 0;
  align-self: flex-start;
}
